#!/usr/bin/perl -w

use IO::Socket;

my $host = "localhost";
my $port = 7003;

# enable tss
my $cmd = "K001";
my $tcmd = "\x02$cmd\x03";

for ( ;; ) {

my $handle = IO::Socket::INET->new (  PeerAddr => $host,
                                        PeerPort => $port,
                                        Proto => "tcp",
                                        Timeout => 0.1);

print "No dice\n" unless $handle;

print $handle "$tcmd";

#my $resp = <$handle>;
sleep ( 1.0 );
$handle->close;
}

# THE END
