#!/bin/sh
#++++++++++++++++++++++++++++++++++++++++++++++++++++
#
# Script to start the Data_Server on the requested machine
#
#++++++++++++++++++++++++++++++++++++++++++++++++++++
#
# Written  10jul07  DLM  Started with Phil Hinz's runao script
#
#++++++++++++++++++++++++++++++++++++++++++++++++++++
#
# Check to see if a hostname was given.  If not, use "localhost"
#
if [[ $1 != "" ]]; then
    pcr_server_host=$1
else
    pcr_server_host="localhost"
fi
#
# Start the Data_Server on the specified host
#
ssh -XYCq $pcr_server_host xterm -geometry 80x10+0+457 +hold -sb -sl 500 -title "Data_Server" -e "local_pcr_server" &
