#!/bin/sh
#++++++++++++++++++++++++++++++++++++++++++++++++++++
#
# Script to start the PCR_Server on the requested machine
#
#++++++++++++++++++++++++++++++++++++++++++++++++++++
#
# Written  10jul07  DLM  Started with Phil Hinz's runao script
#
#++++++++++++++++++++++++++++++++++++++++++++++++++++
#
# Check to see if a hostname was given.  If not, use "localhost"
#
if [[ $1 != "" ]]; then
    pcr_server_host=$1
else
    pcr_server_host="localhost"
fi
#
# Must add mmtao user if trying to start a process on ao-server
#
if [[ $pcr_server_host == ao-server.mmto.arizona.edu ]]; then
    pcr_server_host="mmtao@ao-server.mmto.arizona.edu"
fi
#
# Kill the PCR Server on the specified host
#
ssh -XYCq $pcr_server_host kill_pcr_server
