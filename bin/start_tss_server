#!/bin/sh
#++++++++++++++++++++++++++++++++++++++++++++++++++++
#
# Script to start the TSS_Server on the requested machine
#
#++++++++++++++++++++++++++++++++++++++++++++++++++++
#
# 4-2-2008 tjt
# 2008-11-03 skip
#
#++++++++++++++++++++++++++++++++++++++++++++++++++++

#
# Check to see if a hostname was given.  If not, use "localhost"
#
if [[ $1 != "" ]]; then
    hostname=$1
else
    hostname="localhost"
fi

#
# Must add mmtao user if trying to start a process on ao-server
#
if [[ $hostname == ao-server.mmto.arizona.edu ]]; then
	hostname="mmtao@ao-server.mmto.arizona.edu"
fi

#
# Start the TSS Server on the specified host
#
#ssh -XYCq $hostname xterm -geometry 70x10+839+860 +hold -sb -sl 500 -title "TSS_Server" -e "local_tss_server" &
