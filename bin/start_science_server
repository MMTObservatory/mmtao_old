#!/bin/sh
#++++++++++++++++++++++++++++++++++++++++++++++++++++
#
# Script to start the Science Server on the requested machine
#
#++++++++++++++++++++++++++++++++++++++++++++++++++++
#
# 2008-10-23 skip
#
#++++++++++++++++++++++++++++++++++++++++++++++++++++

#
# Check to see if a hostname was given.  If not, use "localhost"
#
if [[ $1 != "" ]]; then
    hostname=$1
else
    hostname="localhost"
fi
#
# Must add mmtao user if trying to start a process on ao-server
#
    if [[ $hostname == ao-server.mmto.arizona.edu ]]; then
	hostname="mmtao@ao-server.mmto.arizona.edu"
    fi
#
# Start the Science Server on the specified host
#
ssh -XYCq $hostname xterm -geometry 70x10+839+359 +hold -sb -sl 500 -title "Science Server" -e "local_science_server" &
#xterm -geometry 70x10+839+359 +hold -sb -sl 500 -title "Science Server" -e "local_science_server" & DEBUG
