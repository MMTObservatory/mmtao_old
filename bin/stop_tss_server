#!/bin/sh
#++++++++++++++++++++++++++++++++++++++++++++++++++++
#
# Script to kill the TSS Server on the requested machine
#
#++++++++++++++++++++++++++++++++++++++++++++++++++++
#
# 4-2-2008 atjt
#
#++++++++++++++++++++++++++++++++++++++++++++++++++++

#
# Check to see if a hostname was given.  If not, use "localhost"
#
if [[ $1 != "" ]]; then
    hostname=$1
else
#    hostname="localhost"
    kill_tss_server
    exit
fi
#
# Must add mmtao user if trying to start a process on ao-server
#
    if [[ $hostname == ao-server.mmto.arizona.edu ]]; then
	hostname="mmtao@ao-server.mmto.arizona.edu"
    fi
#
# Kill the Topbox Server on the specified host
#
ssh -XYCq $hostname kill_tss_server
